/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 0;
  box-sizing: border-box;
} 
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 20px;
}

.usermotto {
  margin-top: 200px;
}

.section-header{
  display: flex;
  justify-content: space-between;
  width:100%;
  height: 80rpx;
  border:  1.5px solid #BBBBBB;
}
.section-header .left{
  /* background-color: yellow; */
  width:50%;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  padding-left: 25px;
  /* position: relative; */
 
}
.left-left{
  height: 65rpx;
  border-right:  1px solid #BBBBBB;
  position: absolute;
  right:52%;
  top:40%;
}
.section-header .left image{
  width:20%;
  padding-top: 6px;
}
.section-header .left text{
  padding-left: 2px;
}

.section-header .right{
  /* background-color: blue; */
  width:50%;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  padding-left: 25px;
  /* position: relative; */
}
.section-header .right image{
  width:18%;
  padding-top: 6px;
}
.section-header .right text{
  padding-left: 5px;
}


.section-content .grade {
 display: flex;
justify-content: space-between;
 width:100%;
 height:80rpx;
 margin-top: 5px;
 border-bottom: 1px solid #BBBBBB;
 line-height: 80rpx;
 font-size: 16px;
 position: relative;
}
.section-content .grade .text1{
  padding-left: 30px;
}

.section-content .grade .img image{
  width: 48rpx;
  height:  48rpx;
  position: absolute;
  top:6px;
}

.section-content .section1{
   display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #999
}
.section-content .section1 .section1-left{
  display: flex;
  position: relative;
}
.section-content .section1 .section1-left  image{
   width: 48rpx;
   height:  48rpx;
   position: absolute;
  top:8px;
  left:2rpx;
}
.section-content .section1 .section1-left text{
  padding-left: 30px;
}
.arrow{ 

width: 10px;
height: 10px;
border-top: 2px solid #999;
border-right: 2px solid #999;   
transform: rotate(45deg);
margin-top:28rpx;
margin-right: 45rpx; 
}
