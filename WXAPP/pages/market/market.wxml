<!--pages/market/market.wxml-->
<view>
<text style="color:red;font-weight:bold" decode="true" id="time">{{date}}</text>
<text class="iconfont icon-shaixuan" bindtap="fliter" id="fliter">筛选任务</text>

<div class="clear"></div>

<block wx:for="{{task}}"  wx:for-item="item" wx:key="11">
  <view id="task" bindtap="jump" data-taskid="{{index}}" data-isAccept="{{item.isAccept}}"> 
    <text id="task_status" decode="true">&nbsp;&nbsp;&nbsp;&nbsp;状态:{{item.isAccept}}\n</text>
    <text>简述:{{item.title}}\n</text>
    <text></text>
    <text class="tips">tips:{{item.tips}}\n</text>
    <view id="money">￥:{{item.bounty}}</view>
    {{index}}
  </view>
</block>
  <view bindtap="search">查看</view>
</view>